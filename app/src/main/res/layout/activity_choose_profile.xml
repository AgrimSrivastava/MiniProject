<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseProfile"
    android:orientation="vertical"
    android:background="#000"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="40dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="102dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/apple"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:src="@drawable/apple" />

            <ImageView
                android:id="@+id/appleview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:src="@drawable/ic_check"
                android:visibility="invisible" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="102dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/mango"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:src="@drawable/mango" />

            <ImageView
                android:id="@+id/mangoview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:src="@drawable/ic_check"

                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="102dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/grape"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:src="@drawable/grapes" />

            <ImageView
                android:id="@+id/grapeview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:src="@drawable/ic_check"

                android:visibility="invisible" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"        >
        <RelativeLayout
            android:layout_width="102dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pear"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:src="@drawable/pear"
                android:layout_marginEnd="5dp"
                />
            <ImageView
                android:id="@+id/pearview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_check"
                android:visibility="invisible"

                android:padding="20dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="102dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pineapple"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:src="@drawable/pineapple"
                android:layout_marginEnd="5dp"
                />
            <ImageView
                android:id="@+id/pineappleview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_check"
                android:visibility="invisible"

                android:padding="20dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="102dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pomegranate"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:src="@drawable/pomegranate"
                android:layout_marginEnd="5dp"
                />
            <ImageView
                android:id="@+id/pomegranateview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src ="@drawable/ic_check"
                android:visibility="invisible"

                android:padding="20dp"
                />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"        >
        <RelativeLayout
            android:layout_width="102dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/lemon"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:src="@drawable/lemon"
                android:layout_marginEnd="5dp"
                />
            <ImageView
                android:id="@+id/lemonview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_check"
                android:visibility="invisible"

                android:padding="20dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="102dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/strawberry"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:src="@drawable/strawberry"
                android:layout_marginEnd="5dp"
                />
            <ImageView
                android:id="@+id/strawberryview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_check"
                android:visibility="invisible"

                android:padding="20dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="102dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/watermelon"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:src="@drawable/watermelon"
                android:layout_marginEnd="5dp"
                />
            <ImageView
                android:id="@+id/watermelonview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_check"
                android:visibility="invisible"

                android:padding="20dp"
                />
        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/selectphoto"
        android:layout_width="338dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="#ee204d"
        android:padding="10dp"
        android:text="Save photo"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="@dimen/padding_10"
        android:textColor="#fff" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="338dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="#fff"
        android:padding="10dp"
        android:layout_marginEnd="@dimen/padding_10"
        android:text="Cancel"
        android:layout_marginStart="10dp"
        android:textColor="#000" />




</LinearLayout>